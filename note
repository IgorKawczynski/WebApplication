<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="styles.css"/>
    <script src="scripts.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>

    <div id="animacjaLab3" class="test-block">
        Kliknij, a się powiększę WOW
    </div>

    <div id="animacjaLab3_2" class="test-block">
        Najedź kursorem, a się powiększę WOW
    </div>

    <div id="animacjaLab3_3" class="test-block">
        <button onclick="animation3()">KLIKNIJ ME A SE POWEKSZE</button>
        Klikaj kursorem, a się będę powiększał WOW
    </div>

    <button id="btn1" class="btn" onclick="animation1()">
        KLIKNIJ ME A SE POWEKSZE
    </button>

    <button id="btn2" class="btn" onclick="animation2()">
        NAJEDZ NA MNE A SE POWEKSZE
    </button>

    <button id="btn3" class="btn" onclick="animation3()">
        KLIKNIJ ME A SE BEDE POWEKSZAL
    </button>

    <script>
        $("#animacjaLab3").on("click", function () {
            $(this).animate({
                width: 500,
                opacity: 0.4,
                fontSize: "3em",
                borderWidth: "10px"
            }, 1500);
        });
    </script>

    <script>
        $("#animacjaLab3_2").on({
            "mouseover": function () {
                $(this).animate({
                    width: 300
                }, 800);
            },
            "mouseout": function () {
                $(this).animate({
                    width: 200
                }, 800);
            }
        });
    </script>


    <script>
        $("#animacjaLab3_3").on("click", function () {
            if (!$(this).is(":animated")) {
                $(this).animate({
                    width: "+=" + 50,
                    height: "+=" + 10,
                    opacity: "-=" + 0.1,
                    duration: 3000 //inny sposob na okreslenie ile czasu ma trwac animacja
                });
            }
        });
    </script>

</body>

</html>




----------------------------------------------- CSS --------------------------
.test-block {
    width: 200px;
    border: 2px solid rgba(71, 236, 30, 1);
    background: rgba(71, 236, 30, 0.7);
    text-align: center;
    color: #000;
    padding: 20px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.btn {
    width: 200px;
    border: 2px solid rgba(71, 236, 30, 1);
    background: rgba(71, 236, 30, 0.7);
    text-align: center;
    color: #000;
    padding: 20px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    
}




------------------------------- JS ---------------------------------------------


function animation1() {
$("#btn1").on("click", function () {
    $(this).animate({
        width: 500,
        opacity: 0.4,
        fontSize: "3em",
        borderWidth: "10px"
    }, 1500);
});
}

function animation2() {
$("#btn2").on({
    "mouseover": function () {
        $(this).animate({
            width: 300
        }, 800);
    },
    "mouseout": function () {
        $(this).animate({
            width: 200
        }, 800);
    }
});
}


function animation3() {
$("#btn3").on("click", function () {
    if (!$(this).is(":animated")) {
        $(this).animate({
            width: "+=" + 50,
            height: "+=" + 10,
            opacity: "-=" + 0.1,
            duration: 3000 //inny sposob na okreslenie ile czasu ma trwac animacja
        });
    }
});
}
